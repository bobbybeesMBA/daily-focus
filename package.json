{
  "name": "task-dawn",
  "version": "1.0.0-alpha",
  "description": "Task Dawn - Ignite your day with prioritized tasks in your inbox",
  "main": "dist/index.js",
  "scripts": {
    "setup": "npx tsx src/install.ts",
    "start": "node dist/main/index.js",
    "dev": "npx tsx src/index.ts",
    "build": "npm run build:main && npm run build:install",
    "build:main": "ncc build src/index.ts -o dist/main -m",
    "build:install": "ncc build src/install.ts -o dist/install -m",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive:true, force:true})\"",
    "release": "npm run clean && npm run build"
  },
  "keywords": [
    "tasks",
    "productivity",
    "email",
    "google-tasks",
    "icloud",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@googleapis/tasks": "^12.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@vercel/ncc": "^0.38.4",
    "dotenv": "^17.2.3",
    "googleapis": "^169.0.0",
    "nodemailer": "^7.0.12",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  }
}
